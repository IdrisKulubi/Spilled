# Production Environment Configuration
# Copy this file to .env.local for production deployment

# Neon Database Configuration (Production)
EXPO_PUBLIC_DATABASE_URL='postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require'

# Better Auth Configuration (Production)
EXPO_PUBLIC_AUTH_BASE_URL=https://yourapp.com/api/auth
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Cloudflare R2 Configuration (Production)
EXPO_PUBLIC_R2_ACCOUNT_ID="your-production-r2-account-id"
EXPO_PUBLIC_R2_ACCESS_KEY_ID="your-production-r2-access-key"
EXPO_PUBLIC_R2_SECRET_ACCESS_KEY="your-production-r2-secret-key"
EXPO_PUBLIC_R2_BUCKET_NAME="your-production-bucket"
EXPO_PUBLIC_R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
EXPO_PUBLIC_R2_PUBLIC_URL="https://your-production-r2-domain.com"

# Application Configuration (Production)
EXPO_PUBLIC_DEV_MODE=false
EXPO_PUBLIC_ADMIN_EMAIL=kulubiidris@gmail.com